    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'mostro_client'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=mostro-cli"
                ],
                "filter": {
                    "name": "mostro_client",
                    "kind": "lib"
                }
            },
            "args": ["admlistdisputes"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'mostro-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mostro-cli",
                    "--package=mostro-cli"
                ],
                "filter": {
                    "name": "mostro-cli",
                    "kind": "bin"
                }
            },
            "args": ["admlistdisputes"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'mostro-cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=mostro-cli",
                    "--package=mostro-cli"
                ],
                "filter": {
                    "name": "mostro-cli",
                    "kind": "bin"
                }
            },
            "args": ["listorders"],
            "cwd": "${workspaceFolder}"
        }
    ]
}